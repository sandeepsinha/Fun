<%= form_for @event do |f| %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :date %><br>
      <%= f.date_field :date %>
    </p>

    <p>
      <%= f.label :time %><br>
      <%= f.time_select :time %>
    </p>

    <p>
      <%= f.label :venue %><br>
      <%= f.text_field :venue %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>